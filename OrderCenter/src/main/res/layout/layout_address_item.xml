<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginBottom="@dimen/common_margin"
              style="@style/MatchWrap.Vertical">
    <TextView
            android:id="@+id/mShipNameTv"
            style="@style/OrderShipName"
        android:paddingTop="10dp"/>
    <TextView
            android:id="@+id/mShipAddressTv"
            style="@style/OrderShipAddress"/>
    <RelativeLayout
            style="@style/MatchWrap"
            android:background="@drawable/border_bottom">
        <TextView
                android:id="@+id/mSetDefaultTv"
                style="@style/WrapWrap"
                android:padding="@dimen/common_padding_middle"
                android:background="@null"
                android:button="@null"
                android:text="设为默认"
                android:textColor="@color/text_normal"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/common_check_selector"
                android:drawablePadding="@dimen/common_padding_middle"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/mEditTv"
                style="@style/WrapWrap"
                android:gravity="center_vertical"
                android:padding="@dimen/common_padding_middle"
                android:text="@string/common_edit"
                android:textSize="@dimen/text_small_size"
                android:layout_toLeftOf="@+id/mDeleteTv"
                android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/mDeleteTv"
                style="@style/WrapWrap"
                android:padding="@dimen/common_padding_middle"
                android:gravity="center_vertical"
                android:text="@string/common_delete"
                android:textSize="@dimen/text_small_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
